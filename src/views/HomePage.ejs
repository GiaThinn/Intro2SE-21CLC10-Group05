<%- include("partials/header"); %>

<!-- Image slider -->
<div id="slider" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#slider" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#slider" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#slider" data-bs-slide-to="2"></button>
    </div>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="../../public/images/Slide1.jpg" alt="Slide1" class="img-fluid">
            <div class="carousel-caption">
                <h3>First slide label</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="../../public/images/Slide2.jpg" alt="Slide2" class="img-fluid">
            <div class="carousel-caption">
                <h3>Second slide label</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="../../public/images/Slide3.jpg" alt="Slide3" class="img-fluid">
            <div class="carousel-caption">
                <h3>Third slide label</h3>
            </div>
        </div>
    </div>

    <!-- Control -->
    <button class="carousel-control-prev" type="button" data-bs-target="#slider" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#slider" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Hospital list slider -->
<div id="list-slider" class="carousel" data-bs-ride="carousel">
    <p class="text-center heading pt-4">DANH SÁCH CƠ SỞ KHÁM CHỮA BỆNH</p>
    <div class="carousel-inner">
        <% news.forEach((item, i) => { %>
            <div class="carousel-item  <%=(i == 1)? 'active' : '' %> d-flex align-items-center justify-content-center">
                <div class="card">
                    <div class="card-img"><img src="<%= item.image.url %>" class="d-block w-100" alt="Image <%=i %>"></div>
                    <div class="card-body">
                        <a class="card-title h5 text-decoration-none" href="#"><%= item.image.caption %></a>
                        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur quis lorem blandit, elementum nunc vitae, malesuada magna</p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <!-- Control -->
    <button class="carousel-control-prev" type="button" data-bs-target="#list-slider" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#list-slider" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

