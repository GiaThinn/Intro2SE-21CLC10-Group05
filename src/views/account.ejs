<%- include("partials/ad_sidebar.ejs"); %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">

<script defer src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script defer src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script defer src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<script defer src="../public/js/table.js"></script>
<div class="row">
  <div class="col-sm-3 col-md-6 col-lg-4 col-xl-2">
    <!-- Sidebar -->

  </div>

  <div class = "table-reponsive" style="padding-top: 60px;">
    <table class="table text-center table-hover">
      <thead>
        <tr>
          <th>Username</th>
          <th>Password</th>
          <th>Email</th>
          <th>Role</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody style="text-align: left;">
        <% account.forEach((acc)=>{%>
          <tr>
            <td><%= acc.username%></td>
            <td><%= acc.password%></td>
            <td><%= acc.email%></td>
            <td style="text-align: center;">
              <% if (acc.role == '0') {%> Admin
              <%} else if (acc.role == '1') {%> Patient
              <%} else { %> Hospital <%}%>
            </td>
            <td style="text-align: center;">
              <a href="account/update/<%= acc._id%>" class="text-success">
                <i class="fa-solid fa-pencil"></i>
              </a>
              <form action="account/delete/<%= acc._id %>?_method=DELETE" method="post">
                <button type="submit">
                  <i class="fa-solid fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <th>Username</th>
          <th>Password</th>
          <th>Email</th>
          <th>Role</th>
          <th>Action</th>
        </tr>
      </tfoot>
    </table>
  </div>
</div>